%div{:id => "#{dom_id tweet}"}
  %p.my-5
    %strong.block.font-medium.mb-1 Content:
    = tweet.content
  - if action_name != "show"
    = link_to "Show this tweet", tweet, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium"
    = link_to 'Edit this tweet', edit_tweet_path(tweet), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium"
    %hr.mt-6/
